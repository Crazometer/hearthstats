- set_meta_tags :title => 'Arena Matches',
  :description => 'Arena Matches',
  :keywords => 'arena, hearthstats, hearthstone, match, tracking, win, loss' 
div.arenaheader
  h1.arenatitle Recent Arena Matches
  = link_to 'New Arena', new_arena_path, class: "pure-button pure-button-primary newarena"
  = will_paginate @arenas
table
  tr.heading
    th Your Class
    th Opponent Class
    th Win?
    th Time
    th Options
  - @arenas.each do |match|
    tr.matches
      td.cl-effect-3 = link_to match.userclass, race_dashboards_path(:race => match.userclass)
      td = match.oppclass
      td 
        -if match.win  
          span.victory Victory
        -else
          span.defeat Defeat
      td.time = match.created_at.strftime("%I %P on %B %d, %Y")  
      td.cl-effect-3
        span.edit = link_to 'Edit', edit_arena_path(match)
        span.delete= link_to 'Delete', match, method: :delete, data: { confirm: 'Are you sure?' }