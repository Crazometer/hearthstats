<div class="row">
  <div class="col-md-6 col-sm-6">
    <!-- BEGIN GRAPH-->
    <div class="portlet solid bordered light-grey">
      <div class="portlet-title">
        <div class="caption"><i class="fa fa-bar-chart-o font-green-sharp"></i><%= t 'dashboards.index.personal_win_rate' %></div>
      </div>
      <div class="portlet-body">
        <%= render "dashboards/chart", height: 334 %>
      </div>
    </div>
    <!-- END GRAPH-->
  </div>
  <div class="col-md-6 col-sm-6">
    <!-- BEGIN PORTLET-->

    <div class="portlet solid bordered light-grey">
      <div class="portlet-title">
        <div class="caption"><i class="fa fa-bell-o"></i><%= t 'dashboards.index.recent_activities' %></div>
      </div>
      <div class="portlet-body">
        <div class="scroller" style="height: 136px;" data-always-visible="1" data-rail-visible="0">
          <ul class="feeds">
            <% @recent_entries.each do |entry| %>
              <li id="<%= entry.mode.name %>">
                <div class="col1">
                  <div class="cont">
                    <div class="cont-col1">
                      <img src="/assets/Icons/Classes/<%= Klass::LIST[entry.klass_id] %>_Icon.gif" height="27px" />
                    </div>
                    <div class="cont-col2">
                      <div class="desc">
                        <%= entry.klass.name.capitalize %> <%= Match::RESULTS_LIST[entry.result_id].downcase %> <%= t 'dashboards.index.against' %> <%= entry.oppclass.name %> <%= t 'dashboards.index.in' %> <%= Mode::LIST[entry.mode_id] %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col2">
                  <div class="date">
                    <%= time_ago_in_words(entry.created_at) %> ago
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <!-- END PORTLET-->
    <!-- BEGIN PORTLET-->
    <div class="portlet solid bordered light-grey">
      <div class="portlet-title">
        <div class="caption"><i class="fa fa-globe"></i><%= t 'dashboards.index.win_rate_by_hour' %></div>
      </div>
      <div class="portlet-body">
      <div id="winrate-by-time"></div>
      </div>
    </div>
    <!-- END PORTLET-->
  </div>
</div>
<div class="clearfix"></div>
